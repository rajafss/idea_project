<odoo>
  <data>
<!--      herite the stage form view  -->
<!--      we need field boolean to be here to add domain in rule make the user edit data just in draft state-->
    <record id="crm_stage_form" model="ir.ui.view">
        <field name="name">crm.stage.form</field>
        <field name="model">crm.stage</field>
        <field name="inherit_id" ref="crm.crm_stage_form"/>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_won']" position="after">
                        <field name="is_draft"/>
            </xpath>
        </field>
    </record>
  </data>
</odoo>