<odoo>
  <data>

        <record model="ir.ui.view" id="regime_list">
            <field name="name">Régime list</field>
            <field name="model">regime.regime</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>


      <record id="regime_view_form" model="ir.ui.view">
        <field name="name">Régime</field>
        <field name="model">regime.regime</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                     <group>
                         <field name="name"/>
                     </group>
                </sheet>
            </form>
        </field>
      </record>

      <record model="ir.actions.act_window" id="regime_action_window">
          <field name="name">Régime</field>
          <field name="res_model">regime.regime</field>
          <field name="view_mode">tree,form</field>
      </record>

      <menuitem name="Régime"
                id="regime_menu_1"
                parent="contacts.res_partner_menu_config"
              action="regime_action_window"
                sequence="2"/>
  </data>
</odoo>